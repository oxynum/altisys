@Model Altisys.Core.ViewModel.ScenarioViewModel
@{
    Layout = null;
}

<a href="#" class="opener">&nbsp;</a>
<h2>Scénario &amp; actions</h2>
<div class="sm-carousel">
    <a href="#" class="link">Ajouter une étape</a>
    <div class="mask">
        <div class="slideset">
            <div class="sm-slide">
                <div class="circle">LA1</div>
            </div>
            <div class="sm-slide">
                <div class="circle">
                    <span class="icon-tel2"> </span>
                    <em class="num">1</em>
                </div>
            </div>
            <div class="sm-slide">
                <div class="circle">
                    <span class="icon-actions2"> </span>
                    <span class="icon-avatar"> </span>
                </div>
            </div>
            <div class="sm-slide">
                <div class="circle green">
                    <span class="icon-tel2"> </span>
                    <em class="num">2</em>
                </div>
            </div>
            <div class="sm-slide">
                <div class="circle">MED</div>
            </div>
        </div>
    </div>
    <a class="btn-prev" href="#"><span class="icon-arrow-l"></span></a>
    <a class="btn-next disable" href="#"><span class="icon-arrow-r"></span></a>
</div>
<div class="right">
    <span class="text">Action attendue</span>
    <span class="text">Aujourd’hui</span>
    <a href="#" class="action-btn">Valider l’action</a>
</div>